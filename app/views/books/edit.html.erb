<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <h1>Editing Book</h1>

  <%= render 'error', book: @book %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Update Book' %>
  <br>
  <span>
    <%= link_to "Show", book_path(@book) %>|
  </span>
  <span>
    <%= link_to "Back", books_path %>
  </span>
<% end %>