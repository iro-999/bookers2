<h1>User info</h1>
<% @books.each do |book| %>
  <%= image_tag book.get_image %>
  <%= image_tag 'sample-author1.jpg' %>
<% end %>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :introduction %>
    <%= f.submit 'Create Book' %>
  <% end %>

<h1>Books</h1>

<%= link_to "book.title", books_path(params[:id]) %>



