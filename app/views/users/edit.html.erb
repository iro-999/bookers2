<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

<%= render 'books/error', book: @user %>

  <%= form_with model: @user do |f| %>
  <div class="form-group">
      <label for="inputName">Name</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control name" %>
      <br>
  </div>
  <div class="form-group">
      <label for="user_image">Image</label>
      <br>
      <%= f.file_field :profile_image, accept: "image/*" %>
  </div>
      <br>
  <div class="form-group">
      <label for="user_introduction">Introduction</label>
      <br>
      <%= f.text_area :introduction, class: "form-control introduction" %>
  </div>
      <br>
  <div class="form-group">
      <%= f.submit "Update User", class: "btn btn-secondary" %>
  </div>
    <% end %>
</div>
</div>
</main>