<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
<% if @user == current_user %>
  <div class="row">
    <%= link_to edit_user_path(@user) do %>
      <i class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_67564"></i>
    <% end %>
  </div>
<% end %>

<%= render 'books/list', book: @book %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
 <table class="table table-hover table-inverse">
  <tr>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </tr>
<% @books.each do |book| %>
  <tr>
    <td><%= image_tag @user.get_profile_image(50,50) %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
    <td><%= @user.name %></td>
  </tr>
<% end %>
</table>